<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thư Viện Số</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="@Url.Content("~/css/index1.css")" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="wrapper" style="height:60px">
        </div>


        <div class="wrapper">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/slideshow1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/slideshow2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/slideshow3.png" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/slideshow4.jpg" alt="For slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </header>
    <div style="height:50px"></div>

    <div class="container-fluid " style="width:80%">
        <div class="row">
            <div class="col-lg-2">
                <div class="list-group">

                    <h1 class="list-group-item list-group-item-action active">Chủ Để</h1>
                    @Html.ActionLink("Khoa Học", "test1", "Home", new { @class = "list-group-item list-group-item-action" })
                    @Html.ActionLink("Xã Hội", "test2", "Home", new { @class = "list-group-item list-group-item-action" })
                    @Html.ActionLink("Nhân Văn", "Index", "Home", new { @class = "list-group-item list-group-item-action" })
                </div>
            </div>
            <div class="col-lg-7"> @RenderBody()</div>
            <div class="col-lg-3"></div>
        </div>
    </div>





    <hr />
    <footer style="text-align:center">

        <p>&copy; @DateTime.Now.Year - <b>Thư viện Trường Đại học Thủy Lợi :</b> Tòa nhà A45 - 175 Tây Sơn - Đống Đa - Hà Nội   </p>
        <p><b>Điện thoại : </b>0368699895     <b>Email : </b> khanhbn72@wru.vn</p>
    </footer>



    @RenderPage("../Admin/Header.cshtml");



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @RenderSection("upload", required: false)
</body>
</html>
