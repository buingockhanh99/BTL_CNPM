@model THUVIENSO.Models.book

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Bạn chắc chắn muốn xóa sách này không?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
              Tên sách
            </dt>

            <dd>
                @Html.DisplayFor(model => model.booktitle)
            </dd>

            <dt>
                Tên tác giả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.authorname)
            </dd>
            <dt>
               Giá bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.booktopic.nametopic)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.booktopic.nametopic)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                  @Html.ActionLink("Back to List", "ListBook")
            </div>
        }
    </div>
</body>
</html>
