@model THUVIENSO.Models.book

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm("Editbook", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
 
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.id, new { @class = "form-control" })


        @Html.HiddenFor(model => model.idbook)

   
        @Html.HiddenFor(model => model.booktitle, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.authorname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.img, new { htmlAttributes = new { @class = "form-control" } })
          
        <div class="form-group">
            @Html.LabelFor(model => model.DataContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ var data = Html.ValueFor(model => model.DataContent);}
                <input type="file" name="datafile" value="@data" required />
            </div>
        </div>       
        @Html.HiddenFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
