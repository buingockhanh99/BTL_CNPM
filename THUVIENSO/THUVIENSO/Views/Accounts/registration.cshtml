@model THUVIENSO.Models.account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <!--Icon-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <!-- Main css -->
    <link href="~/css/style-acc.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="email"><i class="fas fa-user-circle"></i></label>
                                @Html.EditorFor(model => model.accountname, new { htmlAttributes = new { @class = "form-control", @placeholder = "AccountName" } })
                                @Html.ValidationMessageFor(model => model.accountname, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="fas fa-key"></i></label>
                                @Html.EditorFor(model => model.passwords, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="far fa-address-card"></i></label>
                                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @placeholder = "CMND" } })
                                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        }
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                        @Html.ActionLink("I am already member", "Login", "Accounts")
                    </div>
                </div>
            </div>
        </section>
    </div>


</body>
</html>
